<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.Title</title>

    <!-- Favicon -->
    <link rel="Icon" href="/Content/img/favicon/favicon.ico">

    !-- Open Sans Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    @*<link rel="stylesheet" href="/content/css/font-awesome/css/font-awesome.min.css">*@
    @Styles.Render("~/content/css/font-awesome/css/font-awesome.min.css")


    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css/bootstrap/bootstrap.min.css")

    <!-- Custome CSS -->
    @Styles.Render("~/Content/css/style.css")

    <!-- Responsive CSS -->
    @Styles.Render("~/Content/css/responsive.css")
</head>

<!-- Header -->

<body data-target=".navbar">

    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    <a class="navbar-brand" href="@Url.Action("Home","Home")"><img class="img-fluid" src="~/content/img/pre-login/Capture.png"></a>
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Search Notes", "SearchNote", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Buyer Requests", "BuyerRequest", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @if (ViewBag.profilePicture != null)
                            {
                                <div class="userprofile-user-icon dropdown">
                                    <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/Uploads/ProfilePicture/@ViewBag.profilePicture" class="img-fluid rounded-circle" alt="User"></a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                        @Html.ActionLink("My Profile", "UserProfile", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Downloads", "DownloadNote", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Sold Notes", "SoldNote", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Rejected Notes", "RejectedNote", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("LOGOUT", "Logout", "Home", new { @class = "dropdown-item givecolor" })
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="userprofile-user-icon dropdown">
                                    <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/Content/img/user-profile/team-1.jpg" class="img-fluid rounded-circle" alt="User"></a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                        @Html.ActionLink("My Profile", "UserProfile", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Downloads", "DownloadNote", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Sold Notes", "SoldNote", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("My Rejected Notes", "RejectedNote", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Home", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("LOGOUT", "Logout", "Home", new { @class = "dropdown-item givecolor" })
                                    </div>
                                </div>

                            }
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "nav-link", @id = "mynavbtn" })
                        </li>
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>
                                @Html.ActionLink("Search Notes", "SearchNote", "Home", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Buyer Requests", "BuyerRequest", "Home", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link" })
                            </li>
                            <li>
                                @Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @if (ViewBag.profilePicture != null)
                                {
                                    <img src="~/Uploads/ProfilePicture/@ViewBag.profilePicture" class="img-fluid rounded-circle" alt="User">
                                }
                                else
                                {
                                    <img src="~/Content/img/user-profile/team-1.jpg" class="img-fluid rounded-circle" alt="User">
                                }
                            </li>
                            <li>
                                @Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "btn text-center", @id = "mynavbtn" })
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="aaa">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12">

                        <p>
                            Copyright &copy; Tatvasoft All Rights Reserved.
                        </p>

                    </div>
                    <div class="col-md-6 col-12 text-right">

                        <ul class="social-list">
                            <li><a href=""><i class="fa fa-facebook"></i></a></li>
                            <li><a href=""><i class="fa fa-twitter"></i></a></li>
                            <li><a href=""><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>

    </footer>

    <!-- JQuery -->
    @Scripts.Render("~/Content/js/jquery.js")

    <!-- Proper JS -->
    @*<script src="js/popper.min.js"></script>*@
    @Scripts.Render("/content/js/popper.min.js")

    <!-- Bootstrap JS -->
    @Scripts.Render("~/Content/js/bootstrap/bootstrap.min.js")

    <!-- Custom JS -->
    @Scripts.Render("~/Content/js/script.js")

</body>
</html>
