@model NoteMarketPlace.Models.NoteCategory
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Add Catagory -->
<form class="user-details-form" method="post">
    <input hidden name="ID" value="@Model.ID" />
    <section id="personal-details" class="user-profile content-box-md">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h3>Add Category</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-6 col-sm-6">
                                <!-- Catagory Name -->
                                <div class="form-group">
                                    <label class="mylabel">Category Name*</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control InputEmail1", @placeholder = "Enter your Category Name" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>

                            </div>
                        </div>
                        <!-- Description -->
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <div class="textarea-input">
                                        <label class="mylabel" for="InputEmail1">Description *</label>
                                        @Html.TextAreaFor(m => m.Description, new { @placeholder = "Enter your description", @class = "form-control InputEmail1" })
                                        @Html.ValidationMessageFor(m => m.Description)
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-2 col-sm-3">
                                <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>submit</b></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Add Catagory End -->


</form>