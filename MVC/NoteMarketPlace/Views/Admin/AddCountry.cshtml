@model NoteMarketPlace.Models.Country
@{
    ViewBag.Title = "Add Country";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Add Country -->
<form class="user-details-form" method="post">

    <input hidden name="ID" value="@Model.ID" />

    <section id="personal-details" class="user-profile content-box-md">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h3>Add Country</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-6 col-sm-6">
                                <!-- First Name -->
                                <div class="form-group">
                                    <label class="mylabel">Country Name *</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control InputEmail1", @placeholder = "Enter your Country Name" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <!-- Last Name -->
                                <div class="form-group">
                                    <label class="mylabel" for="InputEmail1">Country Code*</label>
                                    @Html.TextAreaFor(m => m.CountryCode, new { @placeholder = "Enter Country Code", @class = "form-control InputEmail1" })
                                    @Html.ValidationMessageFor(m => m.CountryCode)
                                </div>

                            </div>

                        </div>


                        <div class="row">
                            <div class="col-md-2 col-sm-3">
                                <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>submit</b></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Add Country Ends-->


</form>