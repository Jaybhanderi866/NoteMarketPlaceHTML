@model NoteMarketPlace.Models.SystemConfiguratioin

@{
    ViewBag.Title = "Manage System Configuration";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Manage System Config -->
<form class="user-details-form" method="post" enctype="multipart/form-data">

    <section id="personal-details" class="user-profile content-box-md">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h3>Manage System Configuration</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-7">
                                <!-- Email -->
                                <div class="form-group">
                                    <label class="mylabel mylabel1" for="InputEmail1">Support Email Address *</label>
                                    @Html.TextBoxFor(m => m.EmailID1, new { @class = "form-control InputEmail1", @placeholder = "Enter Support email address" })
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-7">
                                <!-- First Name -->
                                <div class="form-group">
                                    <label class="mylabel mylabel1">Support Phone Number *</label>
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control InputEmail1", @placeholder = "Enter phone number" })
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-7">
                                <!-- Email -->
                                <div class="form-group">
                                    <label class="mylabel mylabel1" for="InputEmail1">Email Address(es)(for various events system will send notification to these users) *</label>
                                    @Html.TextBoxFor(m => m.EmailID2, new { @class = "form-control InputEmail1", @placeholder = "Enter email address" })
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-7">
                                <!-- First Name -->
                                <div class="form-group">
                                    <label class="mylabel mylabel1">Facebook URL</label>
                                    @Html.TextBoxFor(m => m.FacebookUrl, new { @class = "form-control InputEmail1", @placeholder = "Enter facebook url" })
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-7">
                                <!-- First Name -->
                                <div class="form-group">
                                    <label class="mylabel mylabel1">Twitter URL</label>
                                    @Html.TextBoxFor(m => m.TwitterUrl, new { @class = "form-control InputEmail1", @placeholder = "Enter twitter url" })
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-7">
                                <!-- First Name -->
                                <div class="form-group">
                                    <label class="mylabel mylabel1">Linkedin URL</label>
                                    @Html.TextBoxFor(m => m.LinkedInUrl, new { @class = "form-control InputEmail1", @placeholder = "Enter linkedin url" })
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <div class="upload-profile-pic">
                                        <label class="mylabel mylabel1" for="InputEmail1">Default image for notes (if seller do not upload)</label>


                                        <input type="file" name="FileProfilePicture" accept="image/*" class="form-control InputEmail1" aria-describedby="emailHelp">
                                        <div class="uploadmypic text-center">
                                            <img class="img-fluid" src="/content/Admin/img/user-profile/upload.png">
                                            <h6>Upload a picture</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <div class="upload-profile-pic">
                                        <label class="mylabel mylabel1" for="InputEmail1">Default Profile Picture (if seller do not upload)</label>


                                        <input type="file" name="FileNotePreview" accept="image/*" class="form-control InputEmail1" aria-describedby="emailHelp">
                                        <div class="uploadmypic text-center">
                                            <img class="img-fluid" src="/Content/img/user-profile/upload.png">
                                            <h6>Upload a picture</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-2 col-sm-3">
                                <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>submit</b></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</form>
<!-- Manage System Config  Ends -->