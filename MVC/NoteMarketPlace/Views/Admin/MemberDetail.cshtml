@using PagedList
@using PagedList.Mvc
@using NoteMarketPlace.Models

@model NoteMarketPlace.Models.MemberDetails

@{
    ViewBag.Title = "Member Detail";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@{
    NoteMarketPlaceEntities db = new NoteMarketPlaceEntities();
}

<!-- Detail Upper -->
<section id="notesdetail-detail">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-sm-12">
                <div class="head">
                    <h3>Member Details</h3>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                        <div class="row docenter">
                            <div class=" col-xs-12 col-sm-5 col-md-5 col-lg-3">
                                @if (Model.UserProfile.ProfilePicture != null)
                                {
                                    <img class="img-fluid" src="~/Uploads/ProfilePicture/@Model.UserProfile.ProfilePicture">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/Uploads/ProfilePicture/default.jpg">
                                }
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-9">
                                <div class="row">
                                    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-4 left-side-note">
                                        <h5>First Name:</h5>
                                        <h5>Last Name:</h5>
                                        <h5>Email:</h5>
                                        <h5>DOB:</h5>
                                        <h5>Phone No.:</h5>
                                        <h5>College/<br>University:</h5>


                                    </div>
                                    <div class="col-xs-7 col-sm-7 col-md-5 col-lg-8 right-side-note">
                                        <h5>@Model.UserProfile.User.FirstName</h5>
                                        <h5>@Model.UserProfile.User.LastName</h5>
                                        <h5>@Model.UserProfile.User.EmailID</h5>
                                        @if (Model.UserProfile.DOB != null)
                                        {
                                            <h5>@Model.UserProfile.DOB.Value.ToString("dd-MM-yyyy")</h5>
                                        }
                                        else
                                        {
                                            <h5>&nbsp;-&nbsp;</h5>
                                        }
                                        @if (Model.UserProfile.PhoneNumber != null)
                                        {
                                            <h5>@Model.UserProfile.PhoneNumber</h5>
                                        }
                                        else
                                        {
                                            <h5>&nbsp;-&nbsp;</h5>
                                        }
                                        @if (Model.UserProfile.University != null)
                                        {
                                            <h5>@Model.UserProfile.University</h5>
                                        }
                                        else
                                        {
                                            <h5>&nbsp;-&nbsp;</h5>
                                        }

                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 margin-top">
                        <div class="row">
                            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 left-side-note">
                                <h5>Address 1:</h5>
                                <h5>Address 2:</h5>
                                <h5>City:</h5>
                                <h5>State:</h5>
                                <h5>Country:</h5>
                                <h5>Zipcode:</h5>
                            </div>
                            <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7 right-side-note">
                                @if (Model.UserProfile.Address1 != null)
                                {
                                    <h5>@Model.UserProfile.Address1</h5>
                                }
                                else
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                @if (Model.UserProfile.Address2 != null)
                                {
                                    <h5>@Model.UserProfile.Address2</h5>
                                }
                                else
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                @if (Model.UserProfile.City != null)
                                {
                                    <h5>@Model.UserProfile.City</h5>
                                }
                                else
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                @if (Model.UserProfile.State != null)
                                {
                                    <h5>@Model.UserProfile.State</h5>
                                }
                                else
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                <h5>@Model.UserProfile.Country</h5>
                                @if (Model.UserProfile.ZipCode != null)
                                {
                                    <h5>@Model.UserProfile.ZipCode</h5>
                                }
                                else
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- Detail Upper Ends-->

<div class="content-box-md">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
    </div>
</div>

<div class="outerbox">
    <section id="dashboard-publish" class="member-margin">
        <div class="container">
            <div class="row top-table">
                <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                    <h3>Notes</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="grid-table table-responsive-xl">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="align-middle text-center" style="cursor:text">SR NO.</th>
                                    <th scope="col" class="align-middle" onclick="@("window.location.href='" + @Url.Action("MemberDetail", "Admin", new { UserId = Model.UserProfile.UserID.ToString(), sortBy = "title", page = Request.QueryString["page"] }) + "'");">NOTE TITLE</th>
                                    <th scope="col" class="align-middle" onclick="@("window.location.href='" + @Url.Action("MemberDetail", "Admin", new { UserId = Model.UserProfile.UserID.ToString(), sortBy = "category", page = Request.QueryString["page"] }) + "'");">CATEGORY</th>
                                    <th scope="col" class="align-middle" onclick="@("window.location.href='" + @Url.Action("MemberDetail", "Admin", new { UserId = Model.UserProfile.UserID.ToString(), sortBy = "status", page = Request.QueryString["page"] }) + "'");">STATUS</th>
                                    <th scope="col" class="align-middle" style="cursor:text">DOWNLOADED NOTES</th>
                                    <th scope="col" class="align-middle" style="cursor:text">TOTAL EARNINGS</th>
                                    <th scope="col" class="align-middle" onclick="@("window.location.href='" + @Url.Action("MemberDetail", "Admin", new { UserId = Model.UserProfile.UserID.ToString(), sortBy = "date", page = Request.QueryString["page"] }) + "'");">DATE ADDED</th>
                                    <th scope="col" class="align-middle" onclick="@("window.location.href='" + @Url.Action("MemberDetail", "Admin", new { UserId = Model.UserProfile.UserID.ToString(), sortBy = "publishdate", search = Request.QueryString["search"], page = Request.QueryString["page"] }) + "'");">PUBLISHED DATE</th>
                                    <th scope="col" class="align-middle" style="cursor:text"></th>
                                    <th scope="col" class="align-middle" style="cursor:text"></th>
                                </tr>
                            </thead>
                            <tbody>
                               @if (Model.pagedList.Count == 0)
                                {
                                   <tr><td colspan="10" class="align-middle">No Record Found!</td></tr>
                                }
                                   @{
                                        int i = -1, a;
                                        if (Request.QueryString["page"] == null || Request.QueryString["page"].AsInt() == 1)
                                        {
                                            a = 1;
                                        }
                                        else
                                        {
                                            a = (Request.QueryString["page"].AsInt() - 1) * 5 + 1;
                                        }
                                        foreach (var item in Model.pagedList)
                                        {
                                            i++;
                                            <tr>
                                                <td class="text-center">@(a + i)</td>
                                                <td class="getpurple">@item.Title</td>
                                                <td>@item.NoteCategory.Name</td>
                                                <td>@item.NoteStatu.Name</td>
                                                <td align="center" class="getpurple">@Model.noteRequest.Where(m => m.SellerID == Model.UserProfile.UserID && m.NoteID == item.NoteID).Count()</td>
                                                <td align="center">$@Model.noteRequest.Where(m => m.SellerID == Model.UserProfile.UserID && m.NoteID == item.NoteID).Sum(m => m.NoteDetail.SellPrice)</td>
                                                <td>@item.CreatedDate.Value.ToString("dd-MM-yyyy,hh:mm")</td>

                                                @if (item.PublishedDate != null)
                                                {
                                                    <td>@item.PublishedDate.Value.ToString("dd-MM-yyyy,hh:mm")</td>
                                                }
                                                else
                                                {
                                                    <td>NA</td>
                                                }
                                                <td align="center">
                                                    <div class="dropdown">
                                                        <a data-toggle="dropdown">
                                                            <i class="fa fa-ellipsis-v dowhite"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            @{ NoteAttachement notefile = db.NoteAttachements.SingleOrDefault(m => m.NoteID == item.NoteID); }
                                                            <a class="dropdown-item" href="@Url.Action("DownloadFile", "Home", new { filename = notefile.FileName })">Download Notes</a>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td></td>
                                            </tr>
                                        }
                                    }
                                    
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </section>
    <!-- Notes Ends -->
</div>
<!-- Pagination -->
@Html.PagedListPager(Model.pagedList, page => Url.Action("MemberDetail", new { page,UserId = Model.UserProfile.UserID.ToString(), sortBy = Request.QueryString["sortBy"], search = Request.QueryString["search"] }), new PagedListRenderOptions()
{
       Display = PagedListDisplayMode.IfNeeded,
       ContainerDivClasses = null,
       LiElementClasses = new string[] { "page-item" },
       UlElementClasses = new string[] { "pagination justify-content-center" },
       LinkToNextPageFormat = "<i class='fa fa-chevron-right'></i>",
       LinkToPreviousPageFormat = "<i class='fa fa-chevron-left'></i>",
       MaximumPageNumbersToDisplay = 5,
       DisplayEllipsesWhenNotShowingAllPageNumbers = false,
       DisplayLinkToFirstPage = PagedListDisplayMode.Never,
       DisplayLinkToLastPage = PagedListDisplayMode.Never
})
