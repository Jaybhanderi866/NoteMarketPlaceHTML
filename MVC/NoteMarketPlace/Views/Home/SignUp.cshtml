@model NoteMarketPlace.Models.User
@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/WithoutHeader.cshtml";

}


<!-- Sign Up Form -->
<section id="background">
    <div id="signup-page" class="container">

        <!-- Logo -->
        <div class="row justify-content-center">
            <div id="signuplogo" class="text-center col-md-6 col-12 col-sm-12">

                <img src="~/Content/img/pre-login/top-logo.png" class="img-fluid" alt="Loin" />
            </div>
        </div>


        <!-- Form -->
        <div class="row justify-content-center">

            <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">
                <div id="signup-form">

                    <!-- Head Section -->
                    <div id="signup-head" class="text-center">
                        <h2>Create an Account</h2>
                        <p>Enter your details to signup</p>
                    </div>

                    <div class="text-center text2">
                        @if (ViewBag.isCreated)
                        {
                            <p><span><i class="fa fa-check-circle"></i> Your account has been successfully created.</span></p>
                        }
                    </div>
                    <!-- Form -->
                    <form method="post">
                        <!-- First Name -->
                        <div class="form-group">
                            <label class="mylabel" for="InputEmail1">First Name *</label>
                            <!-- <input type="text" class="form-control InputEmail1" aria-describedby="emailHelp" placeholder="Enter your First Name"> -->
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control InputEmail1", @Placeholder = "Enter your First Name" })
                            <div class="text-danger">@Html.ValidationMessageFor(m => m.FirstName) </div>
                        </div>

                        <!-- Last Name -->
                        <div class="form-group">
                            <label class="mylabel" for="InputEmail1">Last Name *</label>
                            <!-- <input type="text" class="form-control InputEmail1" aria-describedby="emailHelp" placeholder="Enter your Last Name"> -->
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control InputEmail1", @placeholder = "Enter your Last Name" })
                            <div class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</div> 
                            
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label class="mylabel" for="InputEmail1">Email *</label>
                            <!--<input type="email" class="form-control InputEmail1" aria-describedby="emailHelp" placeholder="Enter your Email Address"> -->
                            @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control InputEmail1", @placeholder = "Enter your Email Address" })
                            <div class="text-danger">@Html.ValidationMessageFor(m => m.EmailID)</div>
                        </div>

                        <!-- Password 1-->
                        <div class="form-group">
                            <label class="mylabel InputPassword1">Password *</label>
                            <!-- Eye icon -->
                            <div class="wrapper">
                                <!--<input type="password" class="form-control InputEmail1 InputPassword1" placeholder="Enter your password" id="signup-pass-new-1"> -->
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control InputEmail1 InputPassword1 ", @placeholder = "Enter your password", @id = "signup-pass-new-1", @type = "Password" })
                                <span toggle="#signup-pass-new-1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
                        </div>

                        <!-- Password 2-->
                        <div class="form-group">
                            <label class="mylabel InputPassword1">Confirm Password *</label>
                            <!-- Eye icon -->
                            <div class="wrapper">
                                <!--  <input type="password" class="form-control InputEmail1 tempspace InputPassword1" placeholder="Re-enter your password"> -->
                                @Html.TextBoxFor(m => m.Password2, new { @class = "form-control InputEmail1 InputPassword1 ", @placeholder = "Re-enter your password", @id = "signup-pass-new-2", @type = "Password" })
                                <span toggle="#signup-pass-new-2" class="fa fa-fw fa-eye field-icon extra toggle-password"></span>
                            </div>
                            <div class="text-danger">@Html.ValidationMessageFor(m => m.Password2)</div>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>Sign Up</b></button>
                    </form>

                    <p class="text-center mytext">Already have an account? <span>@Html.ActionLink("Log In", "LogIn")</span></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Sign Up Form End -->