@using NoteMarketPlace.Models
@model NoteMarketPlace.Models.NoteDetail

@if (ViewBag.isRegister)
{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Register.cshtml";
}
else
{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/WithoutRegister.cshtml";
}
@{
    NoteMarketPlaceEntities db = new NoteMarketPlaceEntities();
}

<!-- Detail Section -->
<section id="notesdetail-detail">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12 col-sm-12">
                <div class="head">
                    <h3>Notes Details</h3>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-7">
                        <div class="row docenter">
                            <div class=" col-12 col-sm-5 col-md-5 col-lg-5">
                                @*<img class="img-fluid" src="/content/img/Notes Details/1.jpg">*@
                                @if (Model.BookPicture != null)
                                {
                                    <img class="img-fluid" src="~/Uploads/BookPicture/@Model.BookPicture">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/Uploads/BookPicture/default.jpg">
                                }
                            </div>
                            <div class="col-12 col-sm-7 col-md-7 col-lg-7">

                                <h2>@Model.Title</h2>
                                <h5>@Model.NoteCategory.Name</h5>
                                <p class="text-left">@Model.NotesDescription</p>
                                <div class="row">
                                    <div class="col-sm-12 col-md-7 col-lg-9">
                                        <form method="get">
                                            <input name="noteId" value="@Model.NoteID" hidden />
                                            <input name="download" value="download" formmethod="post" hidden />
                                            @if (ViewBag.btnMsg == "Requested")
                                            {
                                                <button type="submit" disabled class="btn text-uppercase text-center" id="mybtn" data-toggle="modal" data-target="#exampleModal"><b>@ViewBag.btnMsg</b></button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn text-uppercase text-center" id="mybtn" data-toggle="modal" data-target="#exampleModal"><b>@ViewBag.btnMsg</b></button>
                                            }
                                        </form>

                                        <!-- Thanks PopUp -->
                                        @if (ViewBag.popup != null)
                                        {
                                            <script>
                                                function closem() {
                                                    var a = document.getElementById("exampleModal").style.display = "none";
                                                }
                                            </script>
                                            <!-- Modal -->
                                            <div style="padding-right: 16px; display: block; opacity:100; overflow:visible;" class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

                                                <div class="modal-dialog">

                                                    <div class="row">
                                                        <div class="col-xl-12">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <a class="close" onclick="closem()" data-dismiss="modal" aria-label="Close">
                                                                        <img src="~/content/img/Notes Details/close.png" style="cursor:pointer">
                                                                    </a>
                                                                </div>
                                                                <div class="model-data">

                                                                    <div class="model-head text-center">
                                                                        <img class="img-fluid" src="~/content/img/Notes Details/SUCCESS.png">
                                                                        <h2>Thank your for purchasing!</h2>
                                                                    </div>
                                                                    <div class="middel-content text-left">
                                                                        <h3>Dear @ViewBag.username,</h3>
                                                                        <p class="para-1">As this is paid notes-you need to pay to seller @ViewBag.sellername offline.We will send him an email that you want to download this note.He may contact you further for payment process completion.</p>
                                                                        <p class="para-2">In Case, you have urgency,<br>Please contact us on +919904356474.</p>
                                                                        <p class="para-3">Once he recevies the payment and acknowledge us-Seleted notes you can see over my downloads tab for download.</p>
                                                                        <p class="para-4">Have a good day.</p>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        }

                                        <!-- Thanks PopUp Ends -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-5 margin-top">
                        <div class="row">
                            <div class="col-5 col-sm-5 col-md-5 left-side-note">
                                <h5>Institution:</h5>
                                <h5>Country:</h5>
                                <h5>Course Name:</h5>
                                <h5>Course Code:</h5>
                                <h5>Professor:</h5>
                                <h5>Number of Pages:</h5>
                                <h5>Approved Date:</h5>
                                <h5>Rating:</h5>
                            </div>
                            <div class="col-7 col-sm-7 col-md-7 right-side-note text-right">
                                @if (Model.InstitutionName == null)
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                <h5>@Model.InstitutionName</h5>

                                @if (Model.Country == null)
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                <h5>@Model.Country1.Name</h5>

                                @if (Model.Course == null)
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                <h5>@Model.Course</h5>

                                @if (Model.CourseCode == null)
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                <h5>@Model.CourseCode</h5>

                                @if (Model.Professor == null)
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                else
                                {
                                    <h5>Mr. @Model.Professor</h5>
                                }

                                @if (Model.NumberOfPages == null)
                                {
                                    <h5>&nbsp;-&nbsp;</h5>
                                }
                                <h5>@Model.NumberOfPages</h5>

                                @if (Model.PublishedDate != null)
                                {
                                    <h5>@Model.PublishedDate.Value.ToString("MMMM dd yyyy")</h5>
                                }
                                else
                                {
                                    <h5>Not Approved</h5>
                                }
                                <div class="rate-fa">
                                    @{
                                        for (int i = 0; i < ViewBag.Rating; i++)
                                        {
                                            <i><i class="fa fa-star giverate"></i></i>
                                        }
                                        for (int i = 0; i < (5 - ViewBag.Rating); i++)
                                        {
                                            <i class="fa fa-star-o"></i>
                                        }
                                    }
                                    <i class="numofreview">@ViewBag.Review Reviews</i>
                                </div>
                            </div>
                        </div>
                        <div class="inappropriate">
                            @if (ViewBag.spam != 0)
                            {
                                <p>@ViewBag.Spam User marked this note as inappropriate</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Detail Section Ends-->

<div class="content-box-md">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
    </div>
</div>

<!-- Preview Section -->
<section id="notesdetail-preview">

    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-5">
                <div class="head">
                    <h3>Notes Preview</h3>
                    @{
                        string preview = "";
                        if (Model.NotePreview != null)
                        {
                            preview = "https://localhost:44336/Uploads/NotePreview/" + Model.NotePreview; ;
                        }
                        else
                        {
                            NoteAttachement notefile = db.NoteAttachements.SingleOrDefault(m => m.NoteID == Model.NoteID);
                            preview = "https://localhost:44336/Uploads/Notes/" + notefile.FileName;
                        }
                    }
                </div>
                <div id="Iframe-Cicis-Menu-To-Go" class="set-margin-cicis-menu-to-go set-padding-cicis-menu-to-go set-border-cicis-menu-to-go set-box-shadow-cicis-menu-to-go center-block-horiz">
                    <div class="responsive-wrapper responsive-wrapper-padding-bottom-90pct" style="-webkit-overflow-scrolling: touch; overflow: auto;">
                        <iframe src="@preview">
                            <p style="font-size: 110%;">
                                <em>
                                    <strong>ERROR: </strong>
                                    An &#105;frame should be displayed here but your browser version does not support &#105;frames.
                                </em> Please update your browser to its most recent version and try again, or access the file <a href="@preview">with this link.</a>
                            </p>
                        </iframe>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-7 margin-top">
                <div class="head">
                    <h3>Customer Reviews</h3>
                </div>
                <div class="customer-reviews">
                    @{
                        var cust = ViewBag.Customer as IEnumerable<NoteMarketPlace.Models.Feedback>;
                        if (cust == null || cust.Count() == 0)
                        {
                            <h5>No record found!</h5>
                        }
                        else
                        {
                            foreach (var customer in ViewBag.Customer)
                            {
                                int id = @customer.UserID;
                                UserProfileDetail user = db.UserProfileDetails.SingleOrDefault(m => m.UserID == id);
                                User user1 = db.Users.SingleOrDefault(m => m.UserId == id);
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-2">
                                        <img src="~/Uploads/ProfilePicture/@user.ProfilePicture" alt="user" class="img-fluid rounded-circle">
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-10">
                                        <h5>@user1.FirstName @user1.LastName </h5>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="rate-fa">
                                                    @for (int i = 0; i < customer.Ratings; i++)
                                                    {
                                                        <i><i class="fa fa-star giverate"></i></i>
                                                    }
                                                    @for (int i = 0; i < (5 - customer.Ratings); i++)
                                                    {
                                                        <i class="fa fa-star-o"></i>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <p>@customer.Comments</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }

                </div>
            </div>
        </div>
    </div>

</section>
<!-- Preview Section Ends -->
