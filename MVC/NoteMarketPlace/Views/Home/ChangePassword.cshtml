@model NoteMarketPlace.Models.ChangePassword

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/WithoutHeader.cshtml";
}

<section id="background">
    <div id="changepass-page" class="container">

        <!-- Logo -->
        <div class="row justify-content-center">
            <div id="loginlogo" class="text-center col-md-6 col-12 col-sm-12">

                <img src="/content/img/pre-login/top-logo.png" class="img-fluid" alt="Loin">
            </div>
        </div>



        <div class="row justify-content-center">

            <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">
                <div id="changepass-form">

                    <!-- Heading -->
                    <div id="changepassword-head" class="text-center">
                        <h2>Change Password</h2>
                        <p>Enter your new password to change your password</p>
                    </div>

                    <!-- Form -->
                    <form method="post">

                        <!-- Password 1-->
                        <div class="form-group">
                            <label class="mylabel">Old Password</label>
                            <div class="wrapper">
                                @*<input type="password" class="form-control InputPassword1" placeholder="Enter your old password" id="changepass-old">*@
                                @Html.TextBoxFor(m => m.Password1, new { @type = "password", @class = "form-control InputPassword1", @id = "changepass-old", @placeholder = "Enter your old password" })
                                <span toggle="#changepass-old" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            @Html.ValidationMessageFor(m => m.Password1)
                        </div>

                        <!-- Password 2-->
                        <div class="form-group">
                            <label class="mylabel">New Password</label>
                            <div class="wrapper">
                                @*<input type="password" class="form-control InputPassword1" placeholder="Enter your new password" id="changepass-new1">*@
                                @Html.TextBoxFor(m => m.Password2, new { @type = "password", @class = "form-control InputPassword1", @id = "changepass-new1", @placeholder = "Enter your new password" })
                                <span toggle="#changepass-new1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            @Html.ValidationMessageFor(m => m.Password2)
                        </div>

                        <!-- Password 3-->
                        <div class="form-group">
                            <label class="mylabel">Confirm Password</label>
                            <div class="wrapper">
                                @*<input type="password" class="form-control InputPassword1" placeholder="Enter your confirm password" id="changepass-new2">*@
                                @Html.TextBoxFor(m => m.Password3, new { @type = "password", @class = "form-control InputPassword1", @id = "changepass-new2", @placeholder = "Enter your confirm password" })
                                <span toggle="#changepass-new2" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            @Html.ValidationMessageFor(m => m.Password3)
                        </div>

                        <!-- LOGIN Button -->
                        <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>Submit</b></button>
                    </form>



                </div>
            </div>
        </div>
    </div>
</section>
<!-- Change Password Page End -->